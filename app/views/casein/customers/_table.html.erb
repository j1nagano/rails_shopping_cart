<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link "メールアドレス", :email %></th>
      <th><%= casein_sort_link "送付先住所", :address %></th>
      <th><%= casein_sort_link "作成日時", :created_at %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <% customers.each do |customer| %>
    <tr>
      <td><%= casein_table_cell_link customer.email, casein_customer_path(customer) %></td>
      <td><%= casein_table_cell_link customer.address, casein_customer_path(customer) %></td>
      <td><%= casein_table_cell_link customer.created_at.strftime('%Y年%m月%d日 %H:%M'), casein_customer_path(customer) %></td>
      <td class="delete">
        <%= link_to(casein_show_row_icon("trash"), casein_customer_path(customer), method: :delete, data: { confirm: "Are you sure you want to delete this customer?" }) %>
      </td>
    </tr>
  <% end %>
</table>
